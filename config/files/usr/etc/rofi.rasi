configuration {
	modes: "drun,run,ssh";
	font: "jetbrains mono 12";
	show-icons: true;
	terminal: "footclient";
	parse-known-hosts: false;
	combi-modes: "drun,window,run";
	timeout {
		action: "kb-cancel";
		delay: 0;
	}
	filebrowser {
		directories-first: true;
		sorting-method: "name";
	}
}

@theme "gruvbox-dark"
